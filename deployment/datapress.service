[Unit]
Description=uWSGI instance to serve PASTA datapress services
After=network.target

[Service]
User=pasta
Group=www-data
WorkingDirectory=/home/pasta/datapress
Environment="PATH=/home/pasta/anaconda3/envs/press/bin"
ExecStart=/home/pasta/anaconda3/envs/press/bin/uwsgi --ini deployment/datapress.ini

[Install]
WantedBy=multi-user.target